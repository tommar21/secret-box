// EnvVault Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth Models
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials auth
  accounts      Account[]
  sessions      Session[]

  // EnvVault specific
  encryptionSalt String?          // Salt para derivar master key (base64)
  masterPassword String?          // Hashed master password (separate from login password)
  projects       Project[]
  globalVars     GlobalVariable[]
  createdAt      DateTime         @default(now())
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// EnvVault Models
// ============================================

model Project {
  id            String          @id @default(cuid())
  userId        String
  name          String
  path          String?         // Path local del proyecto (referencia, encriptado)
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  environments  Environment[]
  linkedGlobals ProjectGlobal[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([userId])
}

model Environment {
  id        String     @id @default(cuid())
  projectId String
  name      String     // 'development', 'staging', 'production'
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  variables Variable[]
  createdAt DateTime   @default(now())

  @@index([projectId])
}

model Variable {
  id             String      @id @default(cuid())
  environmentId  String
  keyEncrypted   String      // Key encriptada (base64)
  valueEncrypted String      // Value encriptado (base64)
  ivKey          String      // IV usado para encriptar key (base64)
  ivValue        String      // IV usado para encriptar value (base64)
  isSecret       Boolean     @default(false)
  environment    Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@index([environmentId])
}

model GlobalVariable {
  id             String          @id @default(cuid())
  userId         String
  keyEncrypted   String          // Key encriptada (base64)
  valueEncrypted String          // Value encriptado (base64)
  ivKey          String          // IV usado para encriptar key (base64)
  ivValue        String          // IV usado para encriptar value (base64)
  isSecret       Boolean         @default(false)
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects       ProjectGlobal[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([userId])
}

model ProjectGlobal {
  projectId String
  globalId  String
  project   Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  global    GlobalVariable @relation(fields: [globalId], references: [id], onDelete: Cascade)

  @@id([projectId, globalId])
}
